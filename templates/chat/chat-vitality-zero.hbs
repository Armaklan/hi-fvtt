<div>
  <img class="chat-icon" src="{{img}}" alt="{{name}}" />
  <h2 class="bad"><strong>{{name}}</strong></h2>
</div>

<div class="flexrow">

  {{#if (eq hp 0)}}
    {{localize "HI.chat.vitalityzero" name=name hp=hp}}
    <br />{{localize "HI.chat.vitalityheroism"}}
    <br />{{localize "HI.chat.vitalityheroismhint"}}
  {{else}}
    {{localize "HI.chat.vitalitydying" name=name hp=hp}}
    <br />{{localize "HI.chat.vitalitydyingheroism"}}
  {{/if}}

  {{#if (lt hp -5)}}
    <br /><strong>{{localize "HI.chat.isdead" name=name}}</strong>
    <br />{{localize "HI.chat.epitaph"}}
  {{/if}}

</div>